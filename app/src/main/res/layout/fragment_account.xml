<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/account_header"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Thư viện"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:paddingVertical="5dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/home_udl_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:background="#33333320"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/account_header"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/account_img"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_name"
            app:layout_constraintTop_toTopOf="@id/account_img"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:text="tester01"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/account_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_fname"
            app:layout_constraintTop_toBottomOf="@id/account_name"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:text="Nguyễn Văn Test"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/account_img"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tk"
        android:text="Tài khoản"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/tk"
        android:id="@+id/auth"/>
</androidx.constraintlayout.widget.ConstraintLayout>